#ifndef STEPPERMOTOR_H_
#define STEPPERMOTOR_H_

class StepperMotor {
public:
	StepperMotor(const int stepPin, const int directionPin, const boolean reverseDirection);
	virtual ~StepperMotor();

	void setup();
	void step();
	void setDirection(int dir);

private:
	const int m_stepPin;
	const int m_directionPin;
	int m_direction;
};

#endif /* STEPPERMOTOR_H_ */
