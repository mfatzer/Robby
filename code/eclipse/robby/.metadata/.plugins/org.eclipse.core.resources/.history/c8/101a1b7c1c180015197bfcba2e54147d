#include "Timer1.h"
#include "Arduino.h"


Timer1::Timer1(void (*isr)(void)) {
	ISR(TIMER1_COMPA_vect)
	{
		(*isr)();
	}
}

Timer1::~Timer1() {
}

// Timer Prescaler auf 8 -> 2MHz
// TimerCounter wird automatisch geresettet
// TimerCounter wird auf 0 gesetzt
void Timer1::initialize() {
	TCCR1A = 0;
	TCCR1B = (1 << WGM12) | (1 << CS11);
	TCNT1  = 0;
}
