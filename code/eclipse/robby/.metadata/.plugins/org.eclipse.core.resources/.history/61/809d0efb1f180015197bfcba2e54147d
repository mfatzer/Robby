#ifndef TIMER1_H_
#define TIMER1_H_

class TimerA {
public:
	TimerA();
	virtual ~TimerA();

	void initialize();
	void setISR(void (*isr)(void));
	void runISR();

	void enableInterrupt();
	void disable();

private:
	void (*m_isr)(void);
};

// Instanz erzeugen
TimerA Timer1;

#endif /* TIMER1_H_ */
