#ifndef TIMER1_H_
#define TIMER1_H_

#include "Logger.h"


class TimerA {
public:
	TimerA();
	virtual ~TimerA();

	void initialize();
	void setISR(void (*isr)(void));
	void runISR();

	void enableInterrupt();
	void disableInterrupt();

	void setTimerPeriod(unsigned int period);
	void resetTimer();

private:
	const Logger m_logger;
	void (*m_isr)(void);
};

// Instanz erzeugen
extern TimerA LeoTimer1;

#endif /* TIMER1_H_ */
