#ifndef STEPPERMOTOR_H_
#define STEPPERMOTOR_H_

class StepperMotor {
public:
	StepperMotor(const int stepPin);
	virtual ~StepperMotor();

	void step();
	void setDirection(int dir);

private:
	int m_direction;
	const int m_stepPin;
};

#endif /* STEPPERMOTOR_H_ */
