#include "StepperMotor.h"
#include "Arduino.h"

void delay_1us();

const int STEP_DELAY = 2000;


StepperMotor::StepperMotor(const int stepPin, const int directionPin)
: m_stepPin(stepPin), m_directionPin(directionPin)
{
	this->m_direction = 0;
}

StepperMotor::~StepperMotor() {
}

void StepperMotor::setup() {
	pinMode(m_stepPin, OUTPUT);
	pinMode(m_directionPin, OUTPUT);
	digitalWrite(m_stepPin, LOW);
	digitalWrite(m_directionPin, LOW);
}

void StepperMotor::step() {
	// do nothing if motor is stopped
	if (m_direction == 0) {
		return;
	}
	digitalWrite(m_stepPin, HIGH);
	delayMicroseconds(STEP_DELAY);
	digitalWrite(m_stepPin, LOW);
	delayMicroseconds(STEP_DELAY);
}

void StepperMotor::setDirection(int dir) {
	Serial.print("Direction: ");
	Serial.println(dir);
	this->m_direction = dir;
	if (dir == 1) {
		digitalWrite(this->m_direction, HIGH);
	}
	else if (dir == -1) {
		digitalWrite(this->m_direction, LOW);
	}
}

// 16 single cycle instructions = 1us at 16Mhz
void delay_1us()
{
  __asm__ __volatile__ (
    "nop" "\n\t"
    "nop" "\n\t"
    "nop" "\n\t"
    "nop" "\n\t"
    "nop" "\n\t"
    "nop" "\n\t"
    "nop" "\n\t"
    "nop" "\n\t"
    "nop" "\n\t"
    "nop" "\n\t"
    "nop" "\n\t"
    "nop" "\n\t"
    "nop" "\n\t"
    "nop" "\n\t"
    "nop" "\n\t"
    "nop");
}

