#ifndef TIMERA_H_
#define TIMERA_H_

#include "Logger.h"
#include "TimerIf.h"

class TimerA : public TimerIf {
public:
	TimerA();
	virtual ~TimerA();

	void initialize();
	void setISR(void (*isr)(void));
	void runISR();

	void enableInterrupt();
	void disableInterrupt();

	void setTimerPeriod(unsigned int period);
	void resetTimer();

private:
	const Logger m_logger;
	void (*m_isr)(void);
};

// Instanz erzeugen
extern TimerA LeoTimer1;

#endif /* TIMERA_H_ */
